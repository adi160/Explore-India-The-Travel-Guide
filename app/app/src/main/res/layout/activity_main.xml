<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/map"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/image1"
        android:layout_width="163dp"
        android:layout_height="124dp"
        android:layout_alignStart="@+id/card_view"
        android:layout_below="@+id/textView"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:cardPreventCornerOverlap="false"
        app:contentPadding="0dp"
        tools:ignore="DuplicateIds,RtlCompat"
        android:layout_alignLeft="@+id/card_view">

        <ImageButton
            android:id="@+id/delhi"
            android:layout_width="163dp"
            android:layout_height="124dp"
            android:layout_alignStart="@+id/card_view"
            android:layout_below="@+id/textView"
            android:background="@drawable/gate" />

        <TextView
            android:layout_width="116dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26sp"
            android:layout_marginRight="30sp"
            android:layout_marginTop="85sp"
            android:text="NEW DELHI"
            android:textSize="20sp"
            android:textStyle="bold" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginTop="10sp"
        app:cardCornerRadius="10dp"
        app:cardElevation="20dp"
        app:cardPreventCornerOverlap="false"
        app:contentPadding="0dp">

            <AutoCompleteTextView
                android:id="@+id/auto1"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="Enter your City"
                android:layout_marginLeft="8dp"
                android:maxLines="1">

            </AutoCompleteTextView>

            <ImageView
                android:layout_marginLeft="300dp"
                android:id="@+id/button1"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/search" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/card_view"
        app:cardCornerRadius="10dp"
        android:layout_margin="8dp"
        app:cardElevation="10dp"
        app:cardPreventCornerOverlap="false"
        app:contentPadding="0dp">

        <Button
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffeec9"
            android:text="Detect my location"
            android:textSize="20sp"
            android:drawableStart="@drawable/placeholder"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:paddingLeft="50dp"
            android:singleLine="true"
            android:drawablePadding="8dp" />

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="8dp"
        android:layout_alignParentTop="true"

        android:background="#f0f0f0"
        android:gravity="center_horizontal"
        android:text="Popular cities"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:ignore="RtlCompat" />

    <android.support.v7.widget.CardView
        android:layout_width="163dp"
        android:layout_height="124dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/image1"
        android:layout_marginEnd="12dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:cardPreventCornerOverlap="false"
        app:contentPadding="0dp"
        tools:ignore="RtlCompat">

        <ImageButton
            android:id="@+id/wb"
            android:layout_width="163dp"
            android:background="@drawable/howrah"
            android:layout_height="124dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/imageButton"
            android:layout_marginEnd="12dp"
            tools:ignore="RtlCompat"
            android:layout_marginRight="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30sp"
            android:layout_marginRight="30sp"
            android:layout_marginTop="80sp"
            android:text="KOLKATA"
            android:gravity="center"
            android:textSize="15sp"
            android:textStyle="bold" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="163dp"
        android:layout_height="124dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="56dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:cardPreventCornerOverlap="false"
        app:contentPadding="0dp">

        <ImageButton
            android:id="@+id/mumbai"
            android:layout_width="163dp"
            android:layout_height="124dp"
            android:background="@drawable/land"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="56dp"
            />

        <TextView
            android:layout_width="116dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30sp"
            android:layout_marginRight="30sp"
            android:layout_marginTop="80sp"
            android:text="MUMBAI"
            android:textSize="25sp"
            android:textStyle="bold" />


    </android.support.v7.widget.CardView>
</RelativeLayout>